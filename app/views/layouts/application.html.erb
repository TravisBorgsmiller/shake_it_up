<!DOCTYPE html>
<html>
  <head>
    <title>ShakeItUp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav>
        <div class="nav-wrapper #c5e1a5 light-green lighten-3">
          <span class="black-text">
          <a href="#" class="brand-logo center"><span class="black-text">ShakeItUp</a></span>
          <% if current_user != nil %>

          <div class="row">
        		<div class="col s5">

            <div class="col s12">
              <%= link_to 'Logout', logout_path, style: "color: black;" %>
            </div>
          </div>
          <% end %>
        </div>
      </nav>

      <br><br>
      <div class="center-align">
        <div class="flash-message">
          <% flash.each do |name, msg| %>
            <h5><%= content_tag :div, msg, class: name, style: 'color: red;' %></h5>
          <% end %>
        </div>
      </div>
    <%= yield %>
  </body>
</html>
